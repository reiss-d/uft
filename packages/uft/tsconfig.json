      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "outDir": "dist",
      "emitDeclarationOnly": true,
      "allowJs": true,
      "checkJs": true,
      "inlineSourceMap": true,
      "types": ["jest", "jest-extended", "jest-chain", "node"]
   },
   "files": [
      "../../node_modules/jest/build/index.d.ts",
      "../../node_modules/jest-extended/types/index.d.ts",
      "../../node_modules/jest-chain/types/index.d.ts"
   ],
